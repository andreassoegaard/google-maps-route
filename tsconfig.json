{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
